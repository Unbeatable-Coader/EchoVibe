<h1 style="text-align: center">All Posts</h1>
<%= link_to "New Post", newPost_path %>

<% @posts.each do |post| %>
  <div class="post">
    <div class="card-img-top" width="320" height="240" controls>
      <% if post.image.attached? %>
        <%= image_tag post.image %>
      <% end %>
    </div>

    <p><strong><%= post.user.username %></strong></p>
    <p><%= post.caption %></p>
    <p>Likes: <%= post.likes %></p>
    <p>Comments: <%= post.comments.count %></p>

    <%= link_to "View Post", post_path(post) %>
    <%= link_to "Like", like_post_path(post), method: :post %>
    <%= link_to "Comment", comment_post_path(post), method: :post %>
  </div>
<% end %>

